pipeline {
    agent {
        node {
            label 'docker-agent-node'
        }
    }

    environment {
        CI = 'true'
        REMOTE_USER = 'vriera-server'
        REMOTE_HOST = '186.139.150.69'
        REMOTE_PORT = '7022'
        REMOTE_DIRECTORY = '/home/vriera-server/redes/builds'
    }
    
    stages {
        stage('Fetch') {
            steps{ 
                echo "Fetching ğŸ’¡"
                sh '''
                  yarn install --silent --frozen-lockfile
                '''
            } 
        }
        stage('Test') {
            steps { 
                echo "Testing ï¸ğŸ¥Š"
                sh '''
                yarn test
                '''
            }
        }
        stage('Build') {
            
            steps {
                // You can add your build steps here
                echo "Building ğŸ› ï¸"
                sh '''
                yarn build
                '''
            }
        }
        stage('Deploy') {
            steps {
                input(message: 'Deploy to production?', ok: 'Deploy', submitter: 'admin')
                
                echo "Deploying ğŸš€"

                // Copy the build to the remote server
                sshagent(credentials: ['ssh-key']) {
                    sh 'scp -P $REMOTE_PORT -o StrictHostKeyChecking=no -r build/ $REMOTE_USER@$REMOTE_HOST:$REMOTE_DIRECTORY/$BUILD_ID'
                }

                // Deploy the build on the remote server
                sshagent(credentials: ['ssh-key']) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no -p 7022 vriera-server@186.139.150.69
                        ./redes/deploy.sh
                    '''
                }
            }
        }
    }

    post {
      failure {
        echo "Build failed ğŸ˜"
        emailext body: "Build failed ğŸ˜", subject: "Build failed ğŸ˜", to: '2ad7f8ba-8221-4250-8c6c-47b076efa18b@mailslurp.com'
      }
      success { 
        echo "Build succeeded ğŸ˜Š"
        emailext body: "Build succeeded ğŸ˜Š", subject: "Build succeeded ğŸ˜Š", to: '2ad7f8ba-8221-4250-8c6c-47b076efa18b@mailslurp.com'
      }
    }
}