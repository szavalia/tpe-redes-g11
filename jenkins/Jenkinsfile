pipeline {
    agent {
        node {
            label 'docker-agent-node'
        }
    }

    environment {
      CI = 'true'
    }
    
    stages {
        stage('Fetch') {
            steps{ 
                echo "Fetching ğŸ’¡"
                sh '''
                  yarn install --silent --frozen-lockfile
                '''
            } 
        }
        stage('Test') {
            steps { 
                echo "Testing ï¸ğŸ¥Š"
                sh '''
                yarn test
                '''
            }
        }
        stage('Build') {
            steps {
                // You can add your build steps here
                echo "Building ğŸ› ï¸"
                sh '''
                yarn build
                '''
            }
        }
        stage('Deploy') {
            steps {
                input(message: 'Deploy to production?', ok: 'Deploy', submitter: 'admin')

                echo "Deploying ğŸš€"
                sh '''
                cd todo-app
                yarn start
                '''
            }
        }
    }

    post {
      failure {
        echo "Build failed ğŸ˜"
        emailext body: "Build failed ğŸ˜", subject: "Build failed ğŸ˜", to: 'szavalia@itba.edu.ar'
      }
